set -e

echo "Running pre-commit checks..."

# Check for debug statements
echo "ğŸ” Checking for debug statements..."
if git diff --cached --name-only | grep '\.py$' | xargs grep -l 'print\|breakpoint\|pdb'; then
    echo "âŒ Found debug statements. Please remove them before committing."
    exit 1
fi

# Run code formatting
if command -v black > /dev/null; then
    echo "ğŸ¨ Running black..."
    black --check .
else
    echo "âš ï¸ black not found. Skipping code formatting check."
fi

